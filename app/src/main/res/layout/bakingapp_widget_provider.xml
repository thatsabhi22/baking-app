<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWidgetBackground"
    android:padding="0dp">

    <TextView
        android:id="@+id/widget_dish_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="TITLE" />

    <ImageView
        android:id="@+id/ivWidgetRecipeIcon"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/widget_dish_title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/dish_icon"
        android:src="@drawable/brownie" />

    <TextView
        android:id="@+id/widget_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivWidgetRecipeIcon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorWidgetBackground"
        android:padding="8dp"
        android:text="@string/latest_dish_ingredients_open_here"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12sp" />

</RelativeLayout>