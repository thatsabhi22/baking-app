<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_tablet_layout"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.RecipeActivity">

    <fragment
        android:id="@+id/recipe_fragment"
        android:name="com.udacity.bakingapp.fragments.RecipeFragment"
        android:layout_width="200dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/testLinearLayout"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/testTV"
            android:text="abcdf"
            android:textSize="50sp"
            android:layout_margin="250dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>