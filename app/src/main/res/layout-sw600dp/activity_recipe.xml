<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_tablet_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context=".ui.RecipeActivity">

    <fragment
        android:id="@+id/recipe_fragment"
        android:name="com.udacity.bakingapp.fragments.RecipeFragment"
        android:layout_width="@dimen/fragment_width"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_weight="1"
        tools:layout="@layout/fragment_recipe" />

    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="@dimen/zero_dim"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/zero_dim"
        android:layout_marginTop="@dimen/short_margin"
        android:layout_marginEnd="@dimen/short_margin"
        android:layout_marginBottom="@dimen/short_margin"
        android:layout_weight="15" />

</LinearLayout>